<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView_charImg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/imageView_charImage"
            tools:srcCompat="@tools:sample/avatars" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/textView_charName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textView_charName" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/textView_charStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textView_charStatus" />

        <TextView
            android:id="@+id/textView_charSpecies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textView_charSpecies" />

        <TextView
            android:id="@+id/textView_charGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textView_charGender" />

        <TextView
            android:id="@+id/textView_charOrigin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textView_charOrigin" />

        <TextView
            android:id="@+id/textView_charLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textView_charLocation" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/textView_charAppearances"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textView_charAppearances" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>